<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="org.haiku.haikudepotserver">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:exclude-filter type="regex" expression="org\.haiku\.haikudepotserver\.api.*"/>
    </context:component-scan>

    <import resource="properties.xml"/>
    <import resource="persistence.xml"/>

    <!-- CAPTCHA SUPPORT -->

    <!--
    This should only need to be directly accessed for the purposes of integration testing.
    -->
    <bean id="captchaRepository" class="org.haiku.haikudepotserver.captcha.DatabaseCaptchaRepository">
        <property name="serverRuntime" ref="haikuDepotServerRuntime"/>
        <property name="expirySeconds" value="${captcha.expiryseconds:120}"/>
    </bean>

    <bean class="org.haiku.haikudepotserver.captcha.CaptchaService">
        <property name="captchaAlgorithm">
            <bean class="org.haiku.haikudepotserver.captcha.SimpleMathProblemCaptchaAlgorithm"/>
        </property>
        <property name="captchaRepository" ref="captchaRepository"/>
    </bean>

    <!-- SECURITY -->

    <bean id="authenticationFilter" class="org.haiku.haikudepotserver.security.AuthenticationFilter"/>

    <!-- LOGGING -->

    <bean id="loggingFilter" class="org.haiku.haikudepotserver.support.logging.LoggingFilter"/>
    <bean class="org.haiku.haikudepotserver.support.logging.LoggingSetupOrchestration" init-method="init"/>

    <!-- SUNDRY -->

    <bean class="org.haiku.haikudepotserver.support.png.PngOptimizationServiceFactory"/>
    <bean class="org.haiku.haikudepotserver.support.hvif.HvifRenderingServiceFactory"/>
    <bean class="org.haiku.haikudepotserver.support.RuntimeInformationService"/>
    <bean
            id="desktopApplicationMinimumVersionFilter"
            class="org.haiku.haikudepotserver.support.desktopapplication.DesktopApplicationMinimumVersionFilter"/>

    <!-- JOBS -->

    <bean class="org.haiku.haikudepotserver.repository.PkgRepositoryImportJobRunner"/>
    <bean class="org.haiku.haikudepotserver.passwordreset.PasswordResetMaintenanceJobRunner"/>

    <!-- OPEN SEARCH -->

    <bean id="opensearchFreemarkerConfiguration" class="freemarker.template.Configuration">
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="localizedLookup" value="false"/>
        <property name="templateLoader">
            <bean class="org.haiku.haikudepotserver.support.freemarker.LocalizedTemplateLoader">
                <property name="base" value="classpath:/opensearch/"/>
            </bean>
        </property>
    </bean>

    <!-- EMAIL -->

    <bean id="emailFreemarkerConfiguration" class="freemarker.template.Configuration">
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="localizedLookup" value="false"/>
        <property name="templateLoader">
            <bean class="org.haiku.haikudepotserver.support.freemarker.LocalizedTemplateLoader">
                <property name="base" value="classpath:/mail/"/>
            </bean>
        </property>
    </bean>

    <!-- JAWR; WEB RESOURCE COMPRESSION ETC... -->

    <bean id="jawrConfigProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:/jawr.properties"/>
        <property name="properties">
            <props>
                <prop key="jawr.debug.on">${jawr.debug.on:false}</prop>
            </props>
        </property>
    </bean>

    <!-- LOCALIZATION -->

    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="basenames">
            <list>
                <value>classpath:messages</value>
                <value>classpath:naturallanguagemessages</value>
            </list>
        </property>
    </bean>

    <!-- SINGLE PAGE TEMPLATE STATS -->

    <bean
            id="singlePageTemplateFrequencyMetrics"
            class="org.haiku.haikudepotserver.singlepage.SinglePageTemplateFrequencyMetrics"/>

    <bean
            id="singlePageTemplateFrequencyMetricsFilter"
            class="org.haiku.haikudepotserver.singlepage.SinglePageTemplateFrequencyMetricsFilter">
        <property name="metrics" ref="singlePageTemplateFrequencyMetrics"></property>
    </bean>

</beans>